            font-weight: 400;
            line-height: 1.6;
        }
        .steps-horizontal {
            display: flex;
            gap: 2rem;
            justify-content: center;
            align-items: stretch;
            margin: 0 auto 0 auto;
            width: 100%;
            max-width: 800px;
            flex-wrap: wrap;
        }
        .step {
            background: var(--card);
            border-radius: 16px;
            box-shadow: 0 2px 16px #157aad07;
            padding: 2.2rem 1.2rem 1.5rem 1.2rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-width: 180px;
            max-width: 245px;
            flex: 1 1 170px;
            border-top: 5px solid var(--brand);
        }
        .step-icon {
            font-size: 2.1rem;
            background: rgba(14,155,255,0.05);
            border-radius: 50%;
            margin-bottom: 1.1rem;
            margin-top: .2rem;
        }
        .step-title {
            font-size: 1.03rem;
            font-weight: 700;
            margin-bottom: .38rem;
            color: var(--accent);
            text-align: center;
        }
        .step-desc {
            font-size: 1.01rem;
            color: #48607c;
            text-align: center;
        }
        .folder {
            display: inline-block;
            background: #eaf6ff;
            color: var(--brand);
            font-family: 'Fira Mono', 'Menlo', 'Consolas', monospace;
            border-radius:5px;
            padding: 1px 8px;
            margin: 0 1.5px 0 1.5px;
            font-size: .97em;
        }
        .version {
